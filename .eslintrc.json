{
  "extends": "next/core-web-vitals",
  "rules": {
    // Matikan (off) error untuk tipe 'any'. Kode akan tetap berjalan.
    "@typescript-eslint/no-explicit-any": "off",
    
    // Ubah error 'no-unescaped-entities' menjadi sebuah peringatan (warn). Build tidak akan gagal.
    "react/no-unescaped-entities": "off",
    
    // Ubah error variabel tidak terpakai menjadi peringatan juga.
    "@typescript-eslint/no-unused-vars": "off"
  }
}